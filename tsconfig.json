{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["src/test/*"] // Ensure this matches your jest.config.js
    }
  },
  "include": ["src/**/*", "src/test/**/*"],
  "exclude": ["node_modules", "dist"]
}