{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",              // Where compiled JavaScript and .d.ts files go
    "rootDir": "./src",              // The root directory of source files
    "baseUrl": "./",                 // Base URL for module resolution
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"]            // Aliases for module resolution
    }
  },
  "include": ["src/**/*"],            // Files to include in the compilation
  "exclude": ["node_modules", "dist", "src/test/**/*"] // Exclude directories
}