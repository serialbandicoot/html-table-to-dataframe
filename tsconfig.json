{
  "compilerOptions": {
    "target": "ES6",                          // Set the target ECMAScript version
    "module": "CommonJS",                      // Module system to use
    "strict": true,                            // Enable strict type checking options
    "esModuleInterop": true,                   // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in imports
    "outDir": "./dist",                        // Output directory for compiled files
    "rootDir": "./src",                        // Root directory of input files
    "baseUrl": "./",                           // Base directory to resolve non-relative module names
    "resolveJsonModule": true,                 // Support importing .json files
    "paths": {
      "@src/*": ["src/*"],                     // Alias for source files
      "@test/*": ["test/*"]                    // Alias for test files
    }
  },
  "include": ["src/**/*", "test/**/*"],         // Include both src and test directories
  "exclude": ["node_modules", "dist"]          // Exclude node_modules and dist directories
}